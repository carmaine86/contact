<h2>Add a product:</h2>
<%= form_for([@customer, @customer.products.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.text_area :quantity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

